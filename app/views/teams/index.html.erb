<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>
<%=form_tag(teams_path, :method => "get") do%>          
    <%= text_field_tag :search, params[:search], placeholder: "Search Teams", :class => 'navbar-link'%>           
<%end%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
