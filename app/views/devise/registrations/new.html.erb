<div class="row log-in">
  
<div class="col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

    <h2>Register</h2>
  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= devise_error_messages! %>
        
    <section class="login-form">
	
			<div class="row">
			  <div class="col-xs-12">
          <div class="picture-container">
            <div class="picture">
            <%= image_tag("default-avatar.png", :id =>"1", :alt => "default-avatar", :class =>"picture-src")%>
            <%= f.file_field :avatar,:id =>"2" %>  
            </div>
               <p class="text-center">Choose Picture</p>
              </div>
            </div>
			  
				<div class="col-xs-12">
				  <%= f.text_field :username, autofocus: true , :class => "form-control input-lg", :placeholder =>"Username"%>
					<span class="glyphicon glyphicon-user"></span>
				</div>
				
				<div class="col-xs-12">
				  <%= f.email_field :email, autofocus: true , class: "form-control input-lg", :placeholder =>"Email" %>
					<span class="glyphicon glyphicon-envelope"></span>
				</div>
				
				<div class="col-xs-12">
					
          <%= f.password_field :password, autocomplete: "off", :class =>"form-control input-lg" , :placeholder =>"Password" %>
					<span class="glyphicon glyphicon-lock"></span>
					
					<% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>

				</div>
				
				<div class="col-xs-12">
					<%= f.password_field :password_confirmation, autocomplete: "off", :class =>"form-control input-lg" , :placeholder =>"Confirm Password" %>
					<span class="glyphicon glyphicon-lock"></span>
					
				</div>
				
     <div class="col-xs-2 col-xs-offset-9">
      <%= f.submit "Create",  class: "btn btn-default btn-lg btn-success"%>
     </div>

    <% end %>
			</div>
			
		</form>
		</section>

    </div>
</div>
</div>


