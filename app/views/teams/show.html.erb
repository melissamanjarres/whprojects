<div class="services" id="work">
<div class="container-compressed container-fluid panel panel-default">
      <div class="services-top panel-heading">
        <h3><%= @team.name %></h3>
      </div>
      
    <div class="row services-row panel-body">
      <% @team_members.each do |member| %>
          <div class="col-md-4 service-row-column">
            <%= image_tag(member.avatar.url(:thumb), :alt => "default-avatar", :class =>"img-responsive image-left-1")%>
            <i class="para">
              <small>
                <span>
                  <%= link_to member.username, member %>
                </span>  member</small>
              </i> 
            </div> 
      <% end %>
      </div>   
      <div class="row services-row panel-body">
        <div class="services-top">
        	<%= render 'joinleave' %>
        </div>
        <div class="clearfix"> </div> 
      </div>
</div>

<div class="col-md-9">
            <div class="profile-content">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel">
                    <div class="panel-heading" role="tab" id="headingOne">
                      <h4 class="panel-title">
                        <div class="row">
                        <div class="col-xs-8 title ">
                        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                          Projects
                        </a>
                      </div>
                      
                    </div>
                      </h4>
                    </div>
                    
                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                      <div class="panel-body">
                        
                        <% @team_project.each do |project| %>
                        <div class="row">
                        <div class="col-xs-12">
                          <div class=" col-xs-4">
                          <%= image_tag project.avatar_project, :class =>"img-responsive"%>
                          </div>
                          <div class=" col-xs-8">
                            <h4><%= link_to project.name, project, :class =>"title-link" %></h4>
                            <p><%= project.description %></p>
                          </div>
                            
                          </div>
                        </div>
                          <% end %>

                      </div>
                    </div>
                    
                  </div>
                  </div>
              </div>
              </div>


